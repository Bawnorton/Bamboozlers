@using Bamboozlers.Classes.AppDbContext
@using Microsoft.AspNetCore.Identity
@inherits SettingsComponentBase

@inject IDbContextFactory<AppDbContext> Db
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IEmailSender<User> EmailSender
@inject NavigationManager NavigationManager
@inject ILogger<CompSettings> Logger

<Modal @bind-Visible="@Visible" Closed="@(async Task () =>
                                        {
                                            UpdateStatusArgs(new StatusArguments(Color.Default, false, "", "")); 
                                            SectionName = "User Profile"; 
                                        })">
    <ModalContent Centered Size="ModalSize.ExtraLarge">
        <ModalHeader>
            <h3>Account Settings</h3>
            <CloseButton/>
        </ModalHeader>
        <ModalBody>
            <Alert Color="@Arguments.StatusColor"
                   Visible="@Arguments.StatusVisible">
                <AlertMessage>
                    @Arguments.StatusMessage
                </AlertMessage>
                <AlertDescription>
                    @Arguments.StatusDescription
                </AlertDescription>
            </Alert>
            <Divider/>
            <Tabs RenderMode="TabsRenderMode.LazyReload" @bind-SelectedTab="SectionName">
                <Items>
                    <Tab Name="User Profile">Profile</Tab>
                    <Tab Name="Login Details">Login Details</Tab>
                    <Tab Name="Delete">Account Management</Tab>
                </Items>
                <Content>
                    <TabPanel Name="User Profile" Margin="Margin.Is2.OnMobile.Is5.OnDesktop">
                        <Container Width="Width.Is100">
                            <Row>
                                <Column>
                                    <Row>
                                        <CompEditEmail DataChangeCallback="OnDataChange"/>  
                                    </Row>
                                    <CompSimpleDivider/>
                                    <Row>
                                        <CompEditPassword DataChangeCallback="OnDataChange"/>  
                                    </Row>
                                </Column>
                            </Row>
                        </Container>
                    </TabPanel>
                    <TabPanel Name="Login Details" Margin="Margin.Is2.OnMobile.Is5.OnDesktop">
                        <Container Width="Width.Is100">
                            <Row>
                                <Column ColumnSize="ColumnSize.Is4">
                                    <Row>
                                        <CompEditAvatar DataChangeCallback="OnDataChange"/> 
                                    </Row>
                                </Column>
                                <Column ColumnSize="ColumnSize.Is8">
                                    <Row>
                                        <CompEditUsername DataChangeCallback="OnDataChange"/>  
                                    </Row>
                                    <CompSimpleDivider/>
                                    <Row>
                                        <CompEditDisplayName DataChangeCallback="OnDataChange"/>
                                    </Row>
                                    <CompSimpleDivider/>
                                    <Row>
                                        <Label class="form-label">Description</Label>
                                        <InputTextArea type="text" @bind-Value="@UserModel.U.Bio" class="form-control"/>
                                    </Row>
                                </Column>
                            </Row>
                        </Container>
                    </TabPanel>
                    <TabPanel Name="Delete" Margin="Margin.Is2.OnMobile.Is5.OnDesktop">
                        <CompDeleteAccount DataChangeCallback="OnDataChange"/>
                    </TabPanel>
                </Content>
            </Tabs>
        </ModalBody>
        <ModalFooter>
            <Form id="logout-form" action="Account/Logout" method="post">
                <AntiforgeryToken/>
                <Button Color="Color.Primary" Type="ButtonType.Submit">
                    Log Out
                </Button>
            </Form>
        </ModalFooter>
    </ModalContent>
</Modal>